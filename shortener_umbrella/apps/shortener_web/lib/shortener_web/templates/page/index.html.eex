<section class="phx-hero">
  <form class="column">
  <label for="url">URL to shorten:</label><br>
  <input type="text" name="url" />
  <button type="submit">Shorten!</button>
  </form>
</section>

<%= if assigns[:short] do %>
<section class="row">
<p>Your shortened url is: <%= @short %></p>
</section>
<% end %>

